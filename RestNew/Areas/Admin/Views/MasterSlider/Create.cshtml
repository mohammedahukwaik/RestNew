@model RestNew.Models.MasterSlider

@{
    ViewData["Title"] = "Create";
}


<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterSlider">Manage Slider</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<div class="row justify-content-center">
    <div class="col-lg-11">
        <div class="card">
            <div class="card-body mt-4">


                <!-- Multi Columns Form -->
                <form asp-action="Create" class="row g-3" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group col-md-6">
                        <label asp-for="MasterSliderTitle" class="control-label"></label>
                        <input autofocus asp-for="MasterSliderTitle" class="form-control" />
                        <span asp-validation-for="MasterSliderTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MasterSliderBreef" class="control-label"></label>
                        <input asp-for="MasterSliderBreef" class="form-control" />
                        <span asp-validation-for="MasterSliderBreef" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MasterSliderDesc" class="control-label"></label>
                        <input asp-for="MasterSliderDesc" class="form-control" />
                        <span asp-validation-for="MasterSliderDesc" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MasterSliderUrl" class="control-label"></label>
                        <input asp-for="MasterSliderUrl" class="form-control" />
                        <span asp-validation-for="MasterSliderUrl" class="text-danger"></span>
                    </div>

                    <div class="form-group text-end mt-3" style="direction:rtl;">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-light-secondary">Back to List</a>
                    </div>
                </form>
                <!-- End Multi Columns Form -->

            </div>
        </div>
    </div>
</div>

