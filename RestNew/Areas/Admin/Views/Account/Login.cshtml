@model RestNew.Areas.Admin.ViewModels.LoginModel

@{
    ViewData["Title"] = "Login";
     Layout = "_Layout1";
}




<div class="card mb-3">
    <div class="card-body">
        <div class="pt-4 pb-2">
            <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
            <p class="text-center small">Enter your email & password to login</p>
        </div>

        <form asp-action="Login" class="row g-3 needs-validation" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" autofocus type="text" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12 position-relative">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" id="password" class="form-control"> 
                <i class="bi bi-eye-slash position-absolute top-50 end-0 pe-3" id="togglePassword" style="cursor: pointer;"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div class="form-check">
                  <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                  <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
            </div>
             <div class="col-12">
                <button class="btn btn-primary w-100" type="submit">Login</button>
             </div>
             <div class="col-12">
                <p class="small mb-0">Don't have account? <a asp-action="Register">Create an account</a></p>
             </div>
        </form>

    </div>
</div>

<script>
    let togglePassword = document.getElementById("togglePassword");
    let password = document.getElementById("password");

    togglePassword.onclick = function(){
        if(password.type == "password"){
            password.type = "text";
            togglePassword.className = "bi bi-eye position-absolute top-50 end-0 pe-3";
        }else{
            password.type = "password";
            togglePassword.className = "bi bi-eye-slash position-absolute top-50 end-0 pe-3";
        }
    }
</script>






