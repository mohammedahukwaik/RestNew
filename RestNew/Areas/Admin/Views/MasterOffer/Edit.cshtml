@model RestNew.ViewModels.MasterOfferModel

@{
    ViewData["Title"] = "Edit";
}


<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterOffer">Manage Offer</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->




<div class="row justify-content-center">
    <div class="col-lg-11">
        <div class="card">
            <div class="card-body mt-4">
                <!-- Multi Columns Form -->
                <form asp-action="Edit" class="row g-3" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="MasterOfferId" />
                    <input type="hidden" asp-for="IsActive" />
                    <input type="hidden" asp-for="IsDelete" />
                    <input type="hidden" asp-for="CreateId" />
                    <input type="hidden" asp-for="CreateDate" />

                    <div class="form-group col-md-6">
                        <label asp-for="MasterOfferTitle" class="control-label"></label>
                        <input asp-for="MasterOfferTitle" class="form-control" />
                        <span asp-validation-for="MasterOfferTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MasterOfferBreef" class="control-label"></label>
                        <input asp-for="MasterOfferBreef" class="form-control" />
                        <span asp-validation-for="MasterOfferBreef" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MasterOfferDesc" class="control-label"></label>
                        <input asp-for="MasterOfferDesc" class="form-control" />
                        <span asp-validation-for="MasterOfferDesc" class="text-danger"></span>
                    </div>
                    @* <div class="form-group col-md-6">
                        <label asp-for="MasterOfferImageUrl" class="control-label"></label>
                        <input asp-for="MasterOfferImageUrl" class="form-control" />
                        <span asp-validation-for="MasterOfferImageUrl" class="text-danger"></span>
                    </div> *@
                    <input type="hidden" asp-for="MasterOfferImageUrl" />
                    <div class="form-group col-md-6">
                        <label asp-for="OfferFile" class="control-label"></label>
                        <input asp-for="OfferFile" class="form-control" />
                        <span asp-validation-for="OfferFile" class="text-danger"></span>
                    </div>
                    <div class="form-group text-end mt-3" style="direction:rtl;">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-light-secondary">Back to List</a>
                    </div>
                </form>
                <!-- End Multi Columns Form -->

            </div>
        </div>
    </div>
</div>


