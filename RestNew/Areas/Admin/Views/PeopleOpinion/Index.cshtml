@model IEnumerable<RestNew.Models.PeopleOpinion>

@{
    ViewData["Title"] = "Index";
}


<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">PeopleOpinion</li>
        </ol>
    </nav>
</div><!-- End Page Title -->




<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="text-end">
                        <a asp-action="Create">
                            <div class="btn btn-primary mt-2 mb-3 text-right">
                                <i class="bi bi-plus-circle" aria-hidden="true"></i>
                                Create
                            </div>
                        </a>
                    </div>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ImageUrl)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Text)
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <a asp-action="Update_Active" asp-route-id="@item.PeopleOpinionId">
                                                <i class="bi bi-eye text-black fs-4"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Update_Active" asp-route-id="@item.PeopleOpinionId">
                                                <i class="bi bi-eye-slash text-black fs-4"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>

